 <div class="container">
        <div class="row align-items-center">
            <div class="LoginDiv col-md-4 offset-md-4">
                <h3 style="text-align: center;">Login in your account</h3>
                <form action="SignIn" method="POST">
                    <p>Mail</p>
                    <input name="mail" id="mail" type="email"/><br><br>
                    <p>Password</p>
                    <input name="password" id="password" type="password"/><br><br>
                    <input class="submitButton" type="submit" value="Login"/><br><br>
                </form>
                <div class="row">
                    <div class="col-md-4">
                        <h6 style="text-align: center;margin-left: 140%; color: gray;">Registration</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col" style="display:inline-block; margin-left: 7px">
                        <form action="registrationApplicant" method="GET">
                            <input class="btn btn-primary regButtons" type="submit" value="Applicant"/>
                        </form>
                    </div>
                    <div class="col" style="display:inline-block">
                        <form action="registrationEmployer" method="GET">
                            <input class="btn btn-primary regButtons" type="submit" value="Employer"/>
                        </form>
                    </div>
                    <div class="col-md-4 offset-md-2">
                        <h5 style="color: red; margin-top:5%;width: 500px;">{{Error}}</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

